<h1>New user</h1>

<%= form_for @user, url: {action:"create"} do |f| %>
    <%= f.label :username, 'Username' %>
    <%= f.text_field :username %>
    <%= f.label :email, 'Email' %>
    <%= f.text_field :email, placeholder: 'blah@example.com' %>
    <%= f.label :password, 'Password' %>
    <%= f.text_field :password%>
    <%= f.submit "Submit" %>
<% end %>


